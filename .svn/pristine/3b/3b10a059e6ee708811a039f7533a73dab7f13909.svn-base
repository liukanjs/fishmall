<?php
namespace common\model;

use think\Model;

class ForumActivityJoinList extends Model
{
    protected $type = [
        'create_time' => 'timestamp:Y/m/d H:i:s',
        'update_time' => 'timestamp:Y/m/d H:i:s'
    ];

    /**
     * TODO 获取报名会员列表
     * @param $activity_id
     * @return false|static[]
     */
    public function Join_List($activity_id)
    {
        return $this->all(['act_id' => $activity_id]);
    }

    /**
     * TODO 获取报名人数
     * @param $activity_id
     * @return int
     */
    public function Join_Count($activity_id)
    {
        return $this->db()->where('act_id', '=', $activity_id)->count();
    }
}