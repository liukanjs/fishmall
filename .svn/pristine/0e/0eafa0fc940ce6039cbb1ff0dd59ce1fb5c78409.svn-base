$(function() {
	//获取后台热门关键字列表

	$.ajax({
		url: ApiUrl + "/index.php?act=index&op=hotsearch",
		type: 'get',
		jsonp: 'callback',
		dataType: 'jsonp',
		timeout:'10000',
		error: function(a,b,c) {
			console.log(b);
			if(c!="error"){
				$(window).apptip({msg:c});				
			}else{
				$(window).apptip({msg:"加载失败，请检查网络设置"});				
			}
		},
		success: function(result) {
			var data = result.datas.value;
			if (data) {
				var hotkey = data.split(',');
				var html = [];
				for (var i = 0; i < hotkey.length; i++) {
					html[i] = '<li>' + hotkey[i] + '</li>';
				};
				$("#hotkey").html(html);

				$('.keyword-list li').each(function() {
					var keyword = encodeURIComponent($(this).text());
					$(this).click(function() {
						location.href = WapSiteUrl+'/tmpl/product_list.html?keyword=' + keyword;
					})
				})

			}

		}
	});

	//输入关键字搜索
	$('.search_buttom').click(function() {
		var keyword = encodeURIComponent($('#keyword').val());
		location.href = WapSiteUrl+'/tmpl/product_list.html?keyword=' + keyword;
	});

	$('#keyword').bind('keypress', function() {
		if ($('#keyword').val().length > 0) {
			$('#clearkeyword').show();
		} else {
			$('#clearkeyword').hide();
		}
	})

	$('#clearkeyword').click(function() {
		$('#keyword').val("");
		$(this).hide();
	});

});