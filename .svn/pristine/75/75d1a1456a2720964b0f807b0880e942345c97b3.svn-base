function init_citys(s_province,s_city,s_county,n_province,n_city,n_county) {
    var citys = {};
    $.getJSON("/static/js/plugins/citys/citys.json", function (json) {
        citys = json.datas;
        $("#"+s_province).html('<option value="">省份</option>');
        $(citys).each(function (index, domEle) {
            if (domEle.parent_id == 1)
                $("#"+s_province).append("<option value='" + domEle.region_id + "' " + (domEle.region_id == n_province ? "selected" : "") + ">" + domEle.region_name + "</option>");
        });
        $("#"+s_province).change(function () {
            var _value = $(this).val();
            $("#"+s_city).html('<option value="">地级市</option>');
            $("#"+s_county).html('<option value="">市、县级市</option>');
            $(citys).each(function (index, domEle) {
                if (domEle.parent_id == _value)
                    $("#"+s_city).append("<option value='" + domEle.region_id + "' " + (domEle.region_id == n_city ? "selected" : "") + ">" + domEle.region_name + "</option>");
            });
        });
        if(n_province != 0) $("#"+s_province).change();
        $("#"+s_city).change(function () {
            var _value = $(this).val();
            $("#"+s_county).html('<option value="">市、县级市</option>');
            $(citys).each(function (index, domEle) {
                if (domEle.parent_id == _value)
                    $("#"+s_county).append("<option value='" + domEle.region_id + "' " + (domEle.region_id == n_county ? "selected" : "") + ">" + domEle.region_name + "</option>");
            });
        });
        if(n_county != 0) $("#"+s_city).change();
    });
}